<!DOCTYPE html>
<html>

<head>
	<%- include('partials/Head.ejs') %>
</head>

<body>
	<header>
		<%- include('partials/Header.ejs') %>
	</header>
	<button type="button" id="play">play</button>
	<label>
		Bpm
		<input 
			id="bpm" 
			type="number" 
			name="bpm" 
			value="120"
			>
	</label>
	<div class="beat-room" id="root">
		<main class="instruments-container">
			<% instrumentSamplesArray.forEach(instrument => { %>
				<h2><%= instrument.instrument %></h2>
				<div class="instrument-container">
					<div class="timeline">
						<% for( let index = 0; index < 16; index++ ) { %>
							<div class="timeline-item"></div>
						<% } %>
					</div>
					<% instrument.samples.forEach(sample => { %>
						<div class="sample">
							<p class="sample-name"><%= sample.sampleName %></p>
							<div class="samples-container">
								<label>
									<input type="checkbox" name=""  class="audio-input <%= sample.sampleName %>" data-audio="<%= sample.sampleName %>">
									<p>1</p>
								</label>
								<label>
									<input type="checkbox" name="" class="audio-input <%= sample.sampleName %>" data-audio="<%= sample.sampleName %>">
									<p>2</p>
								</label>
								<label>
									<input type="checkbox" name="" class="audio-input <%= sample.sampleName %>" data-audio="<%= sample.sampleName %>">
									<p>3</p>
								</label>
								<label>
									<input type="checkbox" name="" class="audio-input <%= sample.sampleName %>" data-audio="<%= sample.sampleName %>">
									<p>4</p>
								</label>
								<label>
									<input type="checkbox" name="" class="audio-input <%= sample.sampleName %>" data-audio="<%= sample.sampleName %>">
									<p>5</p>
								</label>
								<label>
									<input type="checkbox" name="" class="audio-input <%= sample.sampleName %>" data-audio="<%= sample.sampleName %>">
									<p>6</p>
								</label>
								<label>
									<input type="checkbox" name="" class="audio-input <%= sample.sampleName %>" data-audio="<%= sample.sampleName %>">
									<p>7</p>
								</label>
								<label>
									<input type="checkbox" name="" class="audio-input <%= sample.sampleName %>" data-audio="<%= sample.sampleName %>">
									<p>8</p>
								</label>
								<label>
									<input type="checkbox" name="" class="audio-input <%= sample.sampleName %>" data-audio="<%= sample.sampleName %>">
									<p>9</p>
								</label>
								<label>
									<input type="checkbox" name="" class="audio-input <%= sample.sampleName %>" data-audio="<%= sample.sampleName %>">
									<p>10</p>
								</label>
								<label>
									<input type="checkbox" name="" class="audio-input <%= sample.sampleName %>" data-audio="<%= sample.sampleName %>">
									<p>11</p>
								</label>
								<label>
									<input type="checkbox" name="" class="audio-input <%= sample.sampleName %>" data-audio="<%= sample.sampleName %>">
									<p>12</p>
								</label>
								<label>
									<input type="checkbox" name="" class="audio-input <%= sample.sampleName %>" data-audio="<%= sample.sampleName %>">
									<p>13</p>
								</label>
								<label>
									<input type="checkbox" name="" class="audio-input <%= sample.sampleName %>" data-audio="<%= sample.sampleName %>">
									<p>14</p>
								</label>
								<label>
									
									<input type="checkbox" name="" class="audio-input <%= sample.sampleName %>" data-audio="<%= sample.sampleName %>">
									<p>15</p>
								</label>
								<label>
									<input type="checkbox" name="" class="audio-input <%= sample.sampleName %>" data-audio="<%= sample.sampleName %>">
									<p>16</p>
								</label>
								<audio id="<%= sample.sampleName %>" src="/samples/<%= instrument.instrument %>/<%= sample.sampleFileName %>"></audio>
							</div>
						</div>
					<% }) %>
				</div>
			<% }) %>
		</main>
		<section class="user-list" id="user-list">
			<h2>Users</h2>
		</section>
		<%- include('partials/UsernameForm.ejs') %>
	</div>
</body>

</html>